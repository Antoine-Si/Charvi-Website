// scripts.js

// Function to handle mood tracking
function trackMood() {
    var moodSelect = document.getElementById("mood");
    var mood = moodSelect.options[moodSelect.selectedIndex].value;
    var moodResult = document.getElementById("mood-result");

    // Displaying the selected mood
    switch(mood) {
        case 'happy':
            moodResult.textContent = "It's great to hear that you're feeling happy!";
            break;
        case 'sad':
            moodResult.textContent = "It's okay to feel sad sometimes. Take care of yourself!";
            break;
        case 'stressed':
            moodResult.textContent = "Feeling stressed? Remember to take a break and relax.";
            break;
        case 'anxious':
            moodResult.textContent = "Anxiety can be tough. Try some breathing exercises.";
            break;
        case 'neutral':
            moodResult.textContent = "Feeling neutral? Sometimes it's good to just have a calm day.";
            break;
        default:
            moodResult.textContent = "Please select a mood.";
    }

    // Optionally, you can add more functionality here, like storing the mood data
    // in a backend or local storage, and displaying mood trends over time.
}

// Function to initialize event listeners (if needed)
function initialize() {
    var moodButton = document.querySelector("button");
    moodButton.addEventListener("click", trackMood);
}

// Initialize the app
window.onload = initialize;

